@using VaultSystem.Models;
@model int
@{
    ViewBag.Title = "AddContent";
}
@Html.ValidationSummary()
<h2>Add content</h2>
@using (Html.BeginForm())
{
    var vaultItem = new VaultItem();// { VaultId = Model };
    <div>
        <div>
            <span>Content name:</span>
            @Html.TextBoxFor(m=>vaultItem.Name)
        </div>
        <div>
            <span>Content:</span>
            @Html.TextAreaFor(m=>vaultItem.Content, new { @style = "width:100%;height:250px;"})
        </div>
        <div>
            <input type="hidden" name="vaultItem.VaultId" value=@Model />
            <input type="submit" value="Save" />
            @Html.ActionLink("Cancel", "Index", new { vaultId = Model })
        </div>
    </div>
}

